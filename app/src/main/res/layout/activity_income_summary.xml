          android:id="@+id/tvSNTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/sn"
          android:textColor="@color/dark_67"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/tvSN"
          android:layout_width="wrap_content"
