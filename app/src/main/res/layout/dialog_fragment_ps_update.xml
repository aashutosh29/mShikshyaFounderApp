<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="240dp"
    android:background="@drawable/rounded_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="260dp"
        android:layout_height="240dp"
        android:background="@drawable/rounded_dialog"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Available"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#222"
            android:id="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_update_black_24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:id="@+id/ivNetwork"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New update is available for Shikhsya Shikhsak on store."
            android:textSize="15sp"
            android:id="@+id/tvLabel2"
            android:layout_marginEnd="12dp"
            android:textColor="#3d3d3d"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivNetwork"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btIgnore"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Ignore"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:minHeight="0dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"
            android:visibility="visible"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@id/btUpdate"
            />


        <Button
            android:id="@+id/btUpdate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Update"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:minHeight="0dp"
            app:layout_constraintStart_toEndOf="@id/btIgnore"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
