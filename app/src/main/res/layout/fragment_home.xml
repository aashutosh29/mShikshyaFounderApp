<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_shik_bg"
    tools:context="com.bihanitech.shikshyaprasasak.ui.homeActivity.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_founder_bg"
        app:layout_constraintHeight_percent="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSchoolDetails"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.09"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/FounderBg">

                    <ImageView
                        android:id="@+id/ivSchoolIcon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_school"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.2" />

                    <TextView
                        android:id="@+id/tvSchoolName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Little Flower English Boarding School"
                        android:textColor="@color/FounderBlue"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/ivSchoolIcon"
                        app:layout_constraintStart_toEndOf="@id/ivSchoolIcon"
                        app:layout_constraintTop_toTopOf="@id/ivSchoolIcon"
                        app:layout_constraintWidth_percent="0.45" />

                    <TextView
                        android:id="@+id/tvSchoolAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Bharatpur -4 Chitwan"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/tvSchoolName"
                        app:layout_constraintTop_toBottomOf="@id/tvSchoolName"
                        app:layout_constraintWidth_percent="0.35" />

                    <TextView
                        android:id="@+id/tvTodayMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Baishakh"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvTodayDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26"
                        android:textColor="@color/FounderBlue"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/tvTodayMonth"
                        app:layout_constraintEnd_toEndOf="@id/tvTodayMonth" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvNotice"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="@color/FounderBg"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toTopOf="@id/ivAdvertise"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHeight_percent="0.30"
                app:layout_constraintTop_toBottomOf="@id/cvSchoolDetails"


                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"

                    >

                    <ImageView
                        android:id="@+id/ivCircleNotices"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_circle"
                        app:layout_constraintBottom_toBottomOf="@id/tvNotices"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvNotices" />

                    <TextView
                        android:id="@+id/tvNotices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:padding="4dp"
                        android:text="Notice Board"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/ivCircleNotices"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:minHeight="0dp"
                        android:text="More"
                        android:textAllCaps="false"
                        android:textColor="@color/FounderBlue"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvNotices"
                        app:layout_constraintEnd_toStartOf="@id/ivMore"
                        app:layout_constraintTop_toTopOf="@id/tvNotices" />

                    <ImageView
                        android:id="@+id/ivMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_right_arrow_24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/btMore" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvNoticeOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:clickable="true"
                        android:background="@drawable/custom_ripple"
                        app:cardCornerRadius="8dp"
                        android:visibility="visible"
                        app:cardElevation="0dp"
                        app:layout_constraintHeight_percent="0.7"
                        app:layout_constraintTop_toBottomOf="@id/tvNotices">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cvNotice1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            >

                            <ImageView
                                android:id="@+id/ivNoticeBg"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_noticebg"
                                app:layout_constraintEnd_toStartOf="@id/tvTitle1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintWidth_percent="0.05" />

                            <TextView
                                android:id="@+id/tvDateOfIssue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="Chaitra 16"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="@id/tvTitle1"
                                app:layout_constraintTop_toBottomOf="@id/tvTitle1" />

                            <TextView
                                android:id="@+id/tvTitle1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:maxLines="2"
                                android:text="Result Postponed due to COVID-19"
                                android:textColor="#3c3c3c"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tvDetail1"
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"

                                android:layout_marginBottom="4dp"
                                android:text="Final Examination result is postponded for ultimated time due to the corona virus spread world wide virus spread world wide......."
                                android:textColor="#6c6c6c"
                                android:textSize="13sp"
                                app:layout_constraintStart_toStartOf="@id/tvTitle1"
                                app:layout_constraintTop_toBottomOf="@id/tvDateOfIssue"
                                app:layout_constraintWidth_percent="0.9" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvNoticeTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/custom_ripple"
                        android:clickable="true"
                        android:visibility="visible"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"

                        app:layout_constraintTop_toBottomOf="@id/cvNoticeOne">


                    </androidx.cardview.widget.CardView>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clNoNotice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/ivNoticeIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="36dp"
                            android:src="@drawable/icon_megaphone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvNoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="No Notices Right Now!"
                            android:textColor="#5c5c5c"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ivNoticeIcon" />


                        <TextView
                            android:id="@+id/tvNoDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="64dp"
                            android:layout_marginBottom="36dp"
                            android:text="It seems school have not published any notice yet"
                            android:textAlignment="center"
                            android:textColor="#6c6c6c"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvNoTitle" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/ivAdvertise"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_add_corona"
                app:layout_constraintBottom_toTopOf="@id/cvUpComingEvent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintTop_toBottomOf="@id/cvNotice" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cvUpComingEvent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/FounderBg"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivAdvertise"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"

                    >

                    <ImageView
                        android:id="@+id/ivCircleNotice"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_circle"
                        app:layout_constraintBottom_toBottomOf="@id/tvUpComingEvent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvUpComingEvent" />

                    <TextView
                        android:id="@+id/tvUpComingEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:padding="4dp"
                        android:text="Upcoming Notice"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/ivCircleNotice"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btMores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:minHeight="0dp"
                        android:text="More"
                        android:textAllCaps="false"
                        android:textColor="@color/FounderBlue"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvUpComingEvent"
                        app:layout_constraintEnd_toStartOf="@id/ivMores"
                        app:layout_constraintTop_toTopOf="@id/tvUpComingEvent" />

                    <ImageView
                        android:id="@+id/ivMores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_right_arrow_24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/btMores" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvNoticeOnes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/custom_ripple"
                        android:clickable="true"
                        android:visibility="visible"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:layout_constraintTop_toBottomOf="@id/tvUpComingEvent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cvNotice1s"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            >

                            <TextView
                                android:id="@+id/tvDateEvent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="@color/FounderBlue"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/tvMonthEvent"
                                app:layout_constraintEnd_toEndOf="@id/tvMonthEvent"
                                app:layout_constraintStart_toStartOf="@id/tvMonthEvent" />

                            <TextView
                                android:id="@+id/tvMonthEvent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/Baisakh"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tvTitle1s"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/tvTitle1s"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:maxLines="2"
                                android:text="Title no 1 for notice no 1"
                                android:textColor="#3c3c3c"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_percent="0.80" />
                            <!--<ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:layout_constraintEnd_toStartOf="@id/tvTitle1s"
                                />-->


                            <TextView
                                android:id="@+id/tvDetail1s"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:text="This is a general notice for all the students and parent to meet at school ..."
                                android:textColor="#6c6c6c"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@id/tvTitle1s"
                                app:layout_constraintStart_toStartOf="@id/tvTitle1s"
                                app:layout_constraintTop_toBottomOf="@id/tvTitle1s" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvNoticeTwos"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/custom_ripple"
                        android:clickable="true"
                        android:visibility="visible"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:layout_constraintTop_toBottomOf="@id/cvNoticeOnes">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cvNotice2s"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvDateEvent2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16"
                                android:textColor="@color/FounderBlue"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/tvMonthEvent2"
                                app:layout_constraintEnd_toEndOf="@id/tvMonthEvent2"
                                app:layout_constraintStart_toStartOf="@id/tvMonthEvent2" />

                            <TextView
                                android:id="@+id/tvMonthEvent2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/Baisakh"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tvTitle2s"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/tvTitle2s"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:maxLines="2"
                                android:text="School will remain closed until.... "
                                android:textColor="#3c3c3c"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_percent="0.80" />


                            <TextView
                                android:id="@+id/tvDetail2s"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:text="After the final exam completed and the spread of world wide virus in Nepal also, for the security...."
                                android:textColor="#6c6c6c"
                                android:textSize="13sp"
                                app:layout_constraintEnd_toEndOf="@id/tvTitle2s"
                                app:layout_constraintStart_toStartOf="@id/tvTitle2s"
                                app:layout_constraintTop_toBottomOf="@id/tvTitle2s" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvDetail2s" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clNoNotices"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/ivNoticeIcons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="36dp"
                            android:src="@drawable/icon_megaphone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvNoTitles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="No Notices Right Now!"
                            android:textColor="#5c5c5c"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ivNoticeIcons" />


                        <TextView
                            android:id="@+id/tvNoDetails"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="64dp"
                            android:layout_marginBottom="36dp"
                            android:text="It seems school have not published any notice yet"
                            android:textAlignment="center"
                            android:textColor="#6c6c6c"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvNoTitles" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
