<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_shik_bg"
    tools:context="com.bihanitech.shikshyaprasasak.ui.homeActivity.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent=".410"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent=".90"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/shik_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                android:id="@+id/cvNotice">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notices"
                        android:padding="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:id="@+id/tvNotices"
                        />

                    <TextView
                        android:id="@+id/btMore"
                        android:textColor="@color/cc_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textAllCaps="false"
                        android:minHeight="0dp"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tvNotices"
                        app:layout_constraintTop_toTopOf="@id/tvNotices"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="4dp"
                        />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNotices"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="8dp"
                        android:visibility="visible"
                        android:layout_marginEnd="8dp"
                        android:background="@color/dark_shik_bg"

                        android:id="@+id/vDivider1"
                        />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cvNotice1"
                        android:clickable="true"
                        android:background="@drawable/custom_ripple"
                        android:layout_margin="4dp"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/vDivider1">

                        <TextView
                            android:id="@+id/tvTitle1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Title no 1 for notice no 1"
                            android:textSize="16sp"
                            android:maxLines="2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/vH1"
                            android:textColor="#3c3c3c"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="16dp"
                            />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvDetail1"
                            android:text="This is a general notice for all the students and parent to meet at school ..."
                            android:textSize="13sp"
                            android:textColor="#6c6c6c"
                            app:layout_constraintTop_toBottomOf="@id/tvTitle1"
                            app:layout_constraintStart_toStartOf="@id/tvTitle1"
                            app:layout_constraintEnd_toEndOf="@id/tvTitle1"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="@id/tvTitle1"
                            app:layout_constraintBottom_toBottomOf="@id/tvDetail1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias=".8"
                            android:background="@drawable/layout_rounded"
                            android:id="@+id/vH1"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_access_time_black_24dp"
                            app:layout_constraintStart_toEndOf="@id/vH1"
                            app:layout_constraintTop_toTopOf="@id/vH1"
                            app:layout_constraintBottom_toBottomOf="@id/vH1"
                            android:layout_marginStart="2dp"
                            android:id="@+id/ivW1"/>



                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="24 min ago"
                            android:textSize="11sp"
                            android:textColor="#5c5c5c"
                            android:id="@+id/tvDate1"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@id/ivW1"
                            app:layout_constraintTop_toTopOf="@id/vH1"
                            app:layout_constraintBottom_toBottomOf="@id/vH1"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cvNotice1"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:visibility="visible"
                        android:layout_marginEnd="8dp"
                        android:background="@color/dark_shik_bg"

                        android:id="@+id/vDivider"
                        />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_margin="4dp"
                        android:visibility="gone"
                        android:background="@drawable/custom_ripple"
                        app:layout_constraintTop_toBottomOf="@id/vDivider"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/cvNotice2">
                        <TextView
                            android:id="@+id/tvTitle2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textSize="16sp"
                            android:maxLines="2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/vH2"
                            android:textColor="#3c3c3c"
                            android:layout_marginEnd="8dp"
                            />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvDetail2"
                            android:text="  "
                            android:textSize="13sp"
                            android:textColor="#6c6c6c"
                            app:layout_constraintTop_toBottomOf="@id/tvTitle2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toEndOf="@id/tvTitle2"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            />



                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="@id/tvTitle2"
                            app:layout_constraintBottom_toBottomOf="@id/tvDetail2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias=".8"
                            android:background="@drawable/layout_rounded"
                            android:id="@+id/vH2"
                            />



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_access_time_black_24dp"
                            app:layout_constraintStart_toEndOf="@id/vH2"
                            app:layout_constraintTop_toTopOf="@id/vH2"
                            app:layout_constraintBottom_toBottomOf="@id/vH2"
                            android:layout_marginStart="2dp"
                            android:id="@+id/ivW2"/>



                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textSize="11sp"
                            android:id="@+id/tvDate2"
                            android:layout_marginStart="4dp"
                            android:textColor="#5c5c5c"
                            app:layout_constraintStart_toEndOf="@id/ivW2"
                            app:layout_constraintTop_toTopOf="@id/vH2"
                            app:layout_constraintBottom_toBottomOf="@id/vH2"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            app:layout_constraintTop_toBottomOf="@id/tvDetail2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="8dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clNoNotice"
                    android:visibility="gone">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_megaphone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="36dp"
                        android:id="@+id/ivNoticeIcon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Notices Right Now!"
                        android:textColor="#5c5c5c"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/ivNoticeIcon"
                        android:id="@+id/tvNoTitle"/>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="It seems school have not published any notice yet"
                        android:textColor="#6c6c6c"
                        android:textSize="13sp"
                        android:layout_marginStart="64dp"
                        android:layout_marginEnd="64dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@+id/tvNoTitle"
                        android:id="@+id/tvNoDetail"
                        android:layout_marginBottom="36dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:id="@+id/tvOthers"
                app:layout_constraintTop_toBottomOf="@+id/cvNotice"
                app:layout_constraintStart_toStartOf="@id/cvNotice"
                android:layout_marginTop="12dp"
                android:paddingTop="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cvOthers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvOthers">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHomeWork"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#0aafe2"

                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toStartOf="@id/cvAttendance"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".410">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintWidth_percent=".410"
                            android:src="@drawable/ic_icon_homework"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/ivHomeWork"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Home Work"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="@id/ivHomeWork"
                            android:layout_marginTop="12dp"
                            android:textSize="18sp"
                            android:id="@+id/tvHomeWorkTitle"
                            />



                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="assign home work"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="12dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/tvHomeWorkTitle"
                            app:layout_constraintStart_toStartOf="@id/ivHomeWork"
                            android:textSize="12sp"
                            android:id="@+id/tvHomeWorkSubTitle"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAttendance"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="#f9a602"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cvHomeWork"
                    app:layout_constraintWidth_percent=".410">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintWidth_percent=".410"
                            android:src="@drawable/ic_icon_attendance"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/ivAttendance"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Attendance"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="@id/ivAttendance"
                            android:layout_marginTop="12dp"
                            android:textSize="18sp"
                            android:id="@+id/tvAttendanceTitle"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="take attendance"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="12dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/tvAttendanceTitle"
                            app:layout_constraintStart_toStartOf="@id/ivAttendance"
                            android:textSize="12sp"
                            android:id="@+id/tvAttendanceSubTitle"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAccount"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="#ffbc00"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cvCalendar"
                    app:layout_constraintTop_toBottomOf="@id/cvHomeWork"
                    app:layout_constraintWidth_percent=".410">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintWidth_percent=".410"
                            android:src="@drawable/ic_icon_account"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/ivAccount"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Account"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="@id/ivAccount"
                            android:layout_marginTop="12dp"
                            android:textSize="18sp"
                            android:id="@+id/tvAccountTitle"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="check your account statement"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="12dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/tvAccountTitle"
                            app:layout_constraintStart_toStartOf="@id/ivAccount"
                            android:textSize="12sp"
                            android:id="@+id/tvAccountSubTitle"
                            />



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


