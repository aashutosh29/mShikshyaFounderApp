<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@color/shik_bg"
    android:paddingBottom="@dimen/_12sdp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvIncomeSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/FounderBg">

            <TextView
                android:id="@+id/tvSn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:text="100"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n/a"
                android:textColor="@color/label_sub"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="@id/tvParticulars"
                app:layout_constraintTop_toBottomOf="@id/tvParticulars" />


            <TextView
                android:id="@+id/tvParticulars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:text="n/a"
                android:textColor="@color/label_main"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tvAmount"
                app:layout_constraintStart_toEndOf="@id/tvSn"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:maxLines="2"
                android:text="Rs. n/a"
                android:textAlignment="textStart"
                android:textColor="@color/label_main"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvBalaneTitle"
                app:layout_constraintTop_toBottomOf="@id/tvDate"
                app:layout_constraintWidth_percent=".3" />


            <TextView
                android:id="@+id/tvBalaneTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:maxLines="2"
                android:text="Due Balance:"
                android:textAlignment="textStart"
                android:textColor="@color/label_sub"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="@id/tvBalance"
                app:layout_constraintStart_toStartOf="@id/tvParticulars" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:maxLines="2"
                android:text="Rs. n/a"
                android:textAlignment="textEnd"
                android:textColor="@color/FounderRed"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvParticulars"
                app:layout_constraintWidth_percent=".2" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
