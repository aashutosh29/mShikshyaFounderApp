<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="160dp"
    android:background="@drawable/rounded_dialog"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="160dp"

        android:background="@drawable/rounded_dialog"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="we will be verifying the phone number"
            android:textSize="14sp"
            android:id="@+id/tvLabel1"
            android:textColor="#686868"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(+977) 9876543210"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:id="@+id/tvPhoneNo"
            app:layout_constraintStart_toStartOf="@id/tvLabel1"
            app:layout_constraintTop_toBottomOf="@+id/tvLabel1"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Is this OK or would you like to edit the number ?"
            android:textSize="14sp"
            android:id="@+id/tvLabel2"
            android:layout_marginEnd="12dp"
            android:textColor="#3d3d3d"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneNo"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"/>

        <Button
            android:id="@+id/btEdit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="EDIT"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:minHeight="0dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            />


        <Button
            android:id="@+id/btOk"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="OK"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:minHeight="0dp"

            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>